{% layout none %}

<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <script src="{{ 'vendor/qrcode.js' | shopify_asset_url }}" defer></script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_background }}">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.body_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.body_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}

    {%- unless settings.header_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.header_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}

    {%- assign formatted_balance = gift_card.balance | money_without_trailing_zeros | strip_html -%}

    <title>{{ 'gift_cards.issued.title' | t: value: formatted_balance, shop: shop.name }}</title>

    <meta name="description" content="{{ 'gift_cards.issued.subtext' | t }}">

    {{ content_for_header }}

    {%- unless settings.body_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.body_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}
    {%- unless settings.header_font.system? -%}
      <link rel="preload" as="font" href="{{ settings.header_font | font_url }}" type="font/woff2" crossorigin>
    {%- endunless -%}

    {% render 'theme-settings' %}
    {% render 'theme-typography' %}
    {% render 'theme-fluid' %}
    {% render 'theme-colors' %}

    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ 'vendor.css' | asset_url | stylesheet_tag }}
  </head>

  <body class="gift-card color-scheme-1 section">
    <header>
      {%- if gift_card.enabled == false or gift_card.expired -%}
        <div class="fs-1 gift-card__expired">{{ 'gift_cards.issued.expired' | t }}</div>
      {%- endif -%}
      <h1 class="fs-4">
        {{ gift_card.balance | money }}
      </h1>
      {% if gift_card.expires_on %}
        {%- assign gift_card_expiration_date = gift_card.expires_on | date: '%B %e, %Y' -%}
        <p class="gift-card__text">
          {{ 'gift_cards.issued.expiration_date' | t: expires_on: gift_card_expiration_date }}
        </p>
      {% endif %}
    </header>

    <main class="main" role="main" id="main">
      <div class="gift-card__image-wrapper">
        <img
          class="gift-card__image"
          src="{{ 'gift-card/card.svg' | shopify_asset_url }}"
          alt=""
          height="{{ 570 | divided_by: 1.5 }}"
          width="570"
          loading="eager"
        >
      </div>

      <div class="gift-card__text-content">
        {%- if settings.logo != blank -%}
          {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
          {{ settings.logo | image_url: width: 200 | image_tag: class: 'gift-card__logo', alt: logo_alt }}
        {% else %}
          <h2 class="fs-2">{{ shop.name }}</h2>
        {% endif %}
        <div class="gift-card__text-wrapper">
          <p class="gift-card__text">{{ 'gift_cards.issued.how_to_use_gift_card' | t }}</p>
        </div>
        <p id="gift-card-code" class="gift-card__number">{{ gift_card.code | format_code }}</p>
        <div class="gift-card__qr-code" data-identifier="{{ gift_card.qr_identifier }}"></div>

        {%- if gift_card.pass_url -%}
          <a href="{{ gift_card.pass_url }}" class="gift_card__apple-wallet">
            <img
              src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}"
              width="120"
              height="40"
              alt="{{ 'gift_cards.issued.add_to_apple_wallet' | t }}"
              loading="lazy"
            >
          </a>
        {%- endif -%}
      </div>

      <div class="gift-card__buttons-wrapper">
        <div class="gift-card__buttons">
          <button data-copy-code class="btn btn-primary">
            {{ 'gift_cards.issued.copy_code' | t }}
            <div class="gift-card__copy-success-message">
              {% render 'theme-icon', icon: 'check-circle', size: '1em' %}
              {{ 'general.share.success_message' | t }}
            </div>
          </button>
          <a
            href="{{ shop.url }}"
            class="btn btn--secondary"
            target="_blank"
            rel="noopener"
            aria-describedby="a11y-new-window-message"
          >
            {{ 'gift_cards.issued.shop_link' | t }}
          </a>
        </div>
      </div>
    </main>
  </body>
</html>

<script>
  var string = { qrImageAlt: {{ 'gift_cards.issued.qr_image_alt' | t | json }} };
  document.addEventListener('DOMContentLoaded', function() {
    new QRCode( document.querySelector('.gift-card__qr-code'), {
    text: document.querySelector('.gift-card__qr-code').dataset.identifier,
    width: 120,
    height: 120,
    imageAltText: string.qrImageAlt
    });
  });

  var successMessage = document.querySelector('.gift-card__copy-success-message')
  document.querySelector('[data-copy-code]').addEventListener('click', () => {
    navigator.clipboard.writeText(document.getElementById('gift-card-code').innerText).then(function () {
      this.successMessage.classList.toggle('active');

      setTimeout(() => {
        this.successMessage.classList.toggle('active');
      }, 100);
    });
  });
</script>
