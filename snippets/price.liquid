{%- liquid
  if use_variant
    assign target = prod.selected_or_first_available_variant
  else
    assign target = prod
  endif

  assign compare_at_price = target.compare_at_price
  assign price = target.price | default: 1999
  assign available = target.available | default: false
  assign money_price = price | money

  if target == prod and prod.price_varies
    assign money_price = 'products.product.price.from_price_html' | t: price: money_price
  endif
-%}

{%- if target != null or placeholder -%}
  <div
    class="
      price
      {%- if price_class %} {{ price_class }}{% endif -%}
      {%- if available == false %} price--sold-out{% endif -%}
      {%- if compare_at_price > price and prod.quantity_price_breaks_configured? != true %} price--on-sale{% endif -%}
    "
  >
    <div class="price__container">
      <div class="price__regular">
        {%- if prod.quantity_price_breaks_configured? -%}
          {%- if show_compare_at_price and compare_at_price -%}
            {%- unless prod.price_varies == false and prod.compare_at_price_varies %}
              <span class="visually-hidden">
                {{- 'products.product.price.regular_price' | t -}}
              </span>
              <span>
                <s class="price-item price-item--regular variant-item__old-price">
                  {{- compare_at_price | money -}}
                </s>
              </span>
            {%- endunless -%}
          {%- endif -%}
          <span class="visually-hidden">{{ 'products.product.price.regular_price' | t }}</span>
        {%- else -%}
          <span class="visually-hidden">{{ 'products.product.price.regular_price' | t }}</span>
          <span class="price-item price-item--regular">
            {{- money_price -}}
          </span>
        {%- endif -%}
      </div>
      <div class="price__sale">
        {%- unless prod.price_varies == false and prod.compare_at_price_varies %}
          <span class="visually-hidden">{{ 'products.product.price.regular_price' | t }}</span>
          <span>
            <s class="price-item price-item--regular">
              {{- compare_at_price | money -}}
            </s>
          </span>
        {%- endunless -%}
        <span class="visually-hidden">{{ 'products.product.price.sale_price' | t }}</span>
        <span class="price-item price-item--sale price-item--last">
          {{ money_price }}
        </span>
      </div>
      <small class="unit-price{% if prod.selected_or_first_available_variant.unit_price_measurement == nil %} hidden{% endif %}">
        <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
        <span class="unit-price__price">
          <span>{{- prod.selected_or_first_available_variant.unit_price | money -}}</span>
          <span aria-hidden="true">/</span>
          <span class="visually-hidden">&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span>
          <span>
            {%- if prod.selected_or_first_available_variant.unit_price_measurement.reference_value != 1 -%}
              {{- prod.selected_or_first_available_variant.unit_price_measurement.reference_value -}}
            {%- endif -%}
            {{ prod.selected_or_first_available_variant.unit_price_measurement.reference_unit }}
          </span>
        </span>
      </small>
    </div>
  </div>
{% endif %}
