{% render 'product-blocks-combiner', block: block, index: index, type: 'opening' %}

<div
  class="
    product__block
    {%- render 'product-block-classes', block: block -%}
  "
>
  <div
    class="product__price {% render 'text-control-classes', settings: block.settings %}"
    data-update-price
    {{ block.shopify_attributes }}
  >
    {% if prod.selected_or_first_available_variant.price -%}
      {%- render 'price', prod: prod, use_variant: true, price_class: 'price--large' -%}
    {%- elsif is_featured and prod == blank -%}
      {%- render 'price', placeholder: true, price_class: 'price--large' -%}
    {%- else -%}
      {{ 'products.product.unavailable' | t }}
    {%- endif %}

    {%- if cart.taxes_included or cart.duties_included or shop.shipping_policy.body != blank -%}
      <div class="product__tax rte fs--1">
        {%- if cart.duties_included and cart.taxes_included -%}
          {{ 'products.product.duties_and_taxes_included' | t }}
        {%- elsif cart.taxes_included -%}
          {{ 'products.product.taxes_included' | t }}
        {%- elsif cart.duties_included -%}
          {{ 'products.product.duties_included' | t }}
        {%- endif -%}
        {%- if shop.shipping_policy.body != blank -%}
          {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% render 'product-blocks-combiner', block: block, index: index, type: 'closing' %}

{% if show_pay_banner %}
  {% form 'product', product %}
    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
    {{ form | payment_terms }}
  {% endform %}
{% endif %}
