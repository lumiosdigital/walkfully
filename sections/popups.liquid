<section-popups class="popups">
  <div class="popups__overlay" data-wash></div>
  {% for block in section.blocks %}
    {%- liquid
      if block.settings.show_on != blank and request.design_mode == false
        unless block.settings.show_on == request.path
          continue
        endunless
      endif
    -%}

    <component-popup
      class="
        popups__popup
        color-{{ block.settings.color_scheme }}
        {% if block.settings.image != blank %}
          popup--has-image
        {% endif %}
        popup--image-position-{{ block.settings.image_position }}
      "
      data-id="{{ section.id }}-{{ block.id }}"
      data-delay="{% if block.type == 'age_verification' %}0{% else %}{{ block.settings.show_popup }}{% endif %}"
      data-show-again="{% if block.type == 'age_verification' %}0{% else %}{{ block.settings.show_again }}{% endif %}"
      data-type="{{ block.type }}"
      {{ block.shopify_attributes }}
      aria-modal="true"
      aria-labelledby="popup-title-{{ forloop.index }}"
      aria-describedby="popup-body-{{ forloop.index }}"
      role="dialog"
    >
      {% unless block.type == 'age_verification' %}
        <div class="popups__popup-close-btn-wrapper ">
          <button type="button" class="btn-icon" data-close aria-label="{{ 'accessibility.close' | t }}">
            {% render 'theme-icon', icon: 'x', size: '1.25em' %}
          </button>
        </div>
      {% endunless %}
      <div class="popups__popup-inner">
        {% if block.settings.image != blank %}
          {% capture image_sizes %}
          {% if block.settings.image_position == 'background' %}
            {% render 'image-sizes',
              desktop_x_wide_width: 0.3571428571,
              desktop_wide_width: 0.4166666667,
              desktop_width: 0.625,
              tablet_width: 0.4011777778,
              width: 0.95
            %}
          {% else %}
            {% render 'image-sizes',
              desktop_x_wide_width: 0.25,
              desktop_wide_width: 0.2916666667,
              desktop_width: 0.3398058252,
              tablet_width: 0.4375,
              width: 0.4745454545
            %}
          {% endif %}
        {% endcapture %}
          {% render 'image',
            image: block.settings.image,
            sizes: image_sizes,
            wrapper_class: 'popups__popup-image',
            aspect_ratio: block.settings.media_aspect_ratio,
            no_radius: true
          %}
        {% endif %}

        <div
          class="popups__popup-overlay overlay"
          style="--overlay-opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }}"
        ></div>

        <div class="popups__popup-content">
          {% if block.settings.heading != blank %}
            <div
              class="
                block-heading
                block-heading--align-{{ section.settings.horizontal_alignment }}
                block-heading--mobile-align-{{ section.settings.horizontal_alignment_mobile }}
                rhythm-heading
                rhythm-heading-size-{{ block.settings.text_size }}
              "
              id="popup-title-{{ forloop.index }}"
            >
              <h2
                class="
                  rte
                  {% render 'text-control-classes', settings: block.settings %}
                "
              >
                {{ block.settings.heading }}
              </h2>
            </div>
          {% endif %}
          {% if block.settings.subheading_text != blank %}
            <div
              class="
                block-text
                block-text--align-{{ section.settings.horizontal_alignment }}
                block-text--mobile-align-{{ section.settings.horizontal_alignment_mobile }}
                rhythm-text
                rte
                {% render 'text-control-classes', settings: block.settings, prefix: 'subheading' %}
              "
              id="popup-body-{{ forloop.index }}"
            >
              {{ block.settings.subheading_text }}
            </div>
          {% endif %}
          {% if block.settings.button_text != blank %}
            <div
              class="
                block-buttons
                block-buttons--align-left
                block-buttons--mobile-align-left
                rhythm-buttons
                {% if block.settings.enable_animations %} animate animate--slide-in{% endif %}
              "
            >
              <div class="block-buttons__buttons">
                <div class="block-buttons__button">
                  {% render 'button',
                    button_text: block.settings.button_text,
                    button_link: block.settings.button_link,
                    button_style: block.settings.button_style,
                    button_size: block.settings.button_size
                  %}
                </div>
              </div>
            </div>
          {% endif %}

          {% if block.type == 'newsletter_signup' %}
            <div
              class="
                block-newsletter-signup
                block-newsletter-signup--align-{{ horizontal_alignment }}
                block-newsletter-signup--mobile-align-{{ mobile_align }}
                rhythm-newsletter-signup
                section-block
                {% if section.settings.enable_animations %}
                  animate
                  animate--slide-in
                {% endif %}
              "
              {{ block.shopify_attributes }}
            >
              {%- form 'customer', id: 'newsletter-signup' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                {%- if form.posted_successfully? -%}
                  <div class="form__message no-line" role="status">
                    <h3 class="form__message-heading fs-1 ff-b" id="NewsletterSignup-success" tabindex="-1" autofocus>
                      {% render 'theme-icon', icon: 'check-circle', size: '1em' %}
                      {{- 'newsletter.success' | t }}
                    </h3>
                  </div>
                {% else %}
                  <div class="field">
                    <label class="visually-hidden" for="NewsletterForm--{{ section.id }}">
                      {{ 'newsletter.label' | t }}
                      <span aria-hidden="true">*</span>
                    </label>
                    <div class="block-newsletter-signup__input-wrapper">
                      <div class="block-newsletter-signup__input">
                        <input
                          id="NewsletterForm--{{ section.id }}"
                          type="email"
                          name="contact[email]"
                          class="field__input"
                          value="{{ form.email }}"
                          aria-required="true"
                          autocorrect="off"
                          autocapitalize="off"
                          autocomplete="email"
                          {% if form.errors %}
                            autofocus
                            aria-invalid="true"
                            aria-describedby="NewsletterSignup-error"
                          {% elsif form.posted_successfully? %}
                            aria-describedby="NewsletterSignup-success"
                          {% endif %}
                          placeholder="{{ 'newsletter.label' | t }}"
                          required
                        >
                        {%- if form.errors contains 'email' -%}
                          <div id="NewsletterSignup-error" class="form__field-message fs--1">
                            {% render 'theme-icon', icon: 'alert-circle', size: '1em' %}
                            <span>
                              {{- form.errors.translated_fields.email | capitalize }}
                              {{ form.errors.messages.email -}}
                            </span>
                          </div>
                        {%- endif -%}
                      </div>
                      <button
                        type="submit"
                        class="block-newsletter-signup__form-button btn btn--primary"
                      >
                        {{ 'newsletter.button_label' | t }}
                      </button>
                    </div>
                  </div>
                {%- endif -%}
              {%- endform -%}
            </div>
          {% endif %}
          {% if block.type == 'age_verification' %}
            <div
              class="
                block-buttons
                block-buttons--align-left
                block-buttons--mobile-align-left
                rhythm-buttons
                {% if block.settings.enable_animations %} animate animate--slide-in{% endif %}
              "
            >
              <div class="block-buttons__buttons">
                <div class="block-buttons__button" data-close>
                  <button type="button" class="btn btn--primary">
                    {{ 'sections.popups.i_am_over' | t: age: block.settings.min_age }}
                  </button>
                </div>
                <div class="block-buttons__button">
                  <a
                    href="{% if block.settings.exit_url != blank %}{{ block.settings.exit_url }}{% else %}/password{% endif %}"
                    class="btn btn--secondary"
                  >
                    {{- 'sections.popups.i_am_under' | t: age: block.settings.min_age -}}
                  </a>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </component-popup>

    {% if block.type == 'age_verification' %}
      <div class="popups__popup-overlay-block"></div>
    {% endif %}
  {% endfor %}
</section-popups>

