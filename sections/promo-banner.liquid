{%- liquid
  assign has_link = false
  if section.settings.link != blank
    assign has_link = true
  endif

  assign show_eyebrow = section.settings.show_eyebrow
  assign show_main_text = section.settings.show_main_text
  assign show_secondary_heading = section.settings.show_secondary_heading
  assign show_description = section.settings.show_description
  assign show_cta = section.settings.show_cta

  assign has_cta_link = false
  if section.settings.cta_link != blank
    assign has_cta_link = true
  endif

  assign show_cta_button = false
  if show_cta and section.settings.cta_text != blank and has_cta_link and has_link == false
    assign show_cta_button = true
  endif

  assign button_style = section.settings.button_style | default: 'filled'
-%}

{% if has_link %}
  <a href="{{ section.settings.link }}" class="promo-banner__link">
{% endif %}

<div
  class="
    promo-banner
    section
    color-{{ section.settings.color_scheme }}
    {% if section.settings.section_spacing_top != 'none' %}section--spacing-top-{{ section.settings.section_spacing_top }}{% endif %}
    {% if section.settings.section_spacing_bottom != 'none' %}section--spacing-bottom-{{ section.settings.section_spacing_bottom }}{% endif %}
    {% if section.settings.section_border_top %}section--border-top{% endif %}
    {% if section.settings.section_border_bottom %}section--border-bottom{% endif %}
  "
  style="
    --pattern-opacity: {{ section.settings.pattern_opacity | divided_by: 100.0 }};
    --promo-banner-bg: {{ section.settings.background_color }};
    --promo-banner-height: {{ section.settings.banner_height }}px;
    --promo-banner-eyebrow-color: {{ section.settings.eyebrow_color }};
    --promo-banner-main-text-color: {{ section.settings.main_text_color }};
    --promo-banner-accent-color: {{ section.settings.accent_color | default: '#FFCD68' }};
    --promo-banner-description-color: {{ section.settings.description_color | default: '#F7F1E5' }};
    --promo-banner-cta-bg: {{ section.settings.cta_background_color }};
    --promo-banner-cta-text: {{ section.settings.cta_text_color }};
    --promo-banner-cta-border: {{ section.settings.cta_border_color | default: 'transparent' }};
  "
  data-section-id="{{ section.id }}"
>
  {% if section.settings.pattern_image != blank %}
    <div class="promo-banner__pattern" aria-hidden="true">
      {% render 'image',
        image: section.settings.pattern_image,
        sizes: '100vw',
        no_radius: true,
        alt: ''
      %}
    </div>
  {% endif %}

  <div class="promo-banner__content">
    {% if show_eyebrow and section.settings.eyebrow_text != blank %}
      <p class="promo-banner__eyebrow">
        {{ section.settings.eyebrow_text }}
      </p>
    {% endif %}

    {% if show_main_text and section.settings.main_text != blank %}
      <h2 class="promo-banner__main-text">
        {{ section.settings.main_text | newline_to_br }}
      </h2>
    {% endif %}

    {% if show_secondary_heading %}
      <h3 class="promo-banner__secondary-heading">
        {% if section.settings.secondary_heading_prefix != blank %}
          <span class="promo-banner__secondary-text">{{ section.settings.secondary_heading_prefix | newline_to_br }}</span>
        {% endif %}
        {% if section.settings.secondary_heading_accent != blank %}
          <span class="promo-banner__accent">{{ section.settings.secondary_heading_accent }}</span>
        {% endif %}
      </h3>
    {% endif %}

    {% if show_description and section.settings.description_text != blank %}
      <p class="promo-banner__description">
        {{ section.settings.description_text | newline_to_br }}
      </p>
    {% endif %}

    {% if show_cta_button %}
      <a href="{{ section.settings.cta_link }}" class="promo-banner__cta promo-banner__cta--{{ button_style }}">
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</div>

{% if has_link %}
  </a>
{% endif %}

<style>
  .promo-banner__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .promo-banner__link:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 4px;
  }

  .promo-banner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: var(--promo-banner-height, 200px);
    padding: 30px 40px;
    overflow: hidden;
    background-color: var(--promo-banner-bg);
  }

  .promo-banner__pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: var(--pattern-opacity, 0.2);
    pointer-events: none;
  }

  .promo-banner__pattern .image,
  .promo-banner__pattern .image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .promo-banner__content {
    position: relative;
    z-index: 1;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }

  .promo-banner__eyebrow {
    font-family: 'Crimson Pro', serif;
    font-style: italic;
    font-weight: 400;
    font-size: 40px;
    line-height: normal;
    letter-spacing: -0.8px;
    color: var(--promo-banner-eyebrow-color, #F7F1E5);
    margin: 0;
  }

  .promo-banner__main-text {
    font-family: 'Alte Haas Grotesk', sans-serif;
    font-weight: 700;
    font-size: 60px;
    font-style: normal;
    line-height: 0.9;
    letter-spacing: -0.6px;
    text-transform: uppercase;
    color: var(--promo-banner-main-text-color, #F7F1E5);
    margin: 0;
  }

  .promo-banner__secondary-heading {
    font-family: 'Alte Haas Grotesk', sans-serif;
    font-weight: 700;
    font-size: 60px;
    font-style: normal;
    line-height: 0.9;
    letter-spacing: -0.6px;
    text-transform: uppercase;
    color: var(--promo-banner-main-text-color, #F7F1E5);
    margin: -26px 0 0 0;
    text-align: center;
  }

  .promo-banner__secondary-text {
    color: var(--promo-banner-main-text-color, #F7F1E5);
  }

  .promo-banner__accent {
    font-family: 'Crimson Pro', serif;
    font-style: italic;
    font-weight: 400;
    font-size: 96px;
    line-height: 1;
    letter-spacing: -3.84px;
    text-transform: none;
    color: var(--promo-banner-accent-color, #FFCD68);
    margin-left: 0.08em;
  }

  .promo-banner__description {
    font-family: 'Work Sans', Arial, sans-serif;
    font-size: 20px;
    font-weight: 400;
    line-height: 1.3;
    letter-spacing: -0.2px;
    color: var(--promo-banner-description-color, #F7F1E5);
    margin: 20px 0;
    max-width: 700px;
  }

  .promo-banner__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: 'Work Sans', Arial, sans-serif;
    font-size: 13px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    text-transform: uppercase;
    text-decoration: none;
    color: var(--promo-banner-cta-text, #F7F1E5);
    background-color: var(--promo-banner-cta-bg, #F7F1E5);
    padding: 10px 40px;
    min-height: 40px;
    border-radius: 3px;
    border: 1px solid var(--promo-banner-cta-border, transparent);
    transition: opacity 0.2s ease, background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease;
  }

  .promo-banner__cta--outline {
    background-color: transparent;
    color: var(--promo-banner-cta-text, #F7F1E5);
    border-color: var(--promo-banner-cta-border, #F7F1E5);
  }

  .promo-banner__cta:hover {
    opacity: 0.9;
  }

  .promo-banner__cta--outline:hover {
    opacity: 1;
    background-color: var(--promo-banner-cta-text, #F7F1E5);
    color: var(--promo-banner-cta-bg, #D14626);
    border-color: var(--promo-banner-cta-text, #F7F1E5);
  }

  .promo-banner__cta:focus-visible {
    outline: 2px solid currentColor;
    outline-offset: 3px;
  }

  @media screen and (max-width: 990px) {
    .promo-banner__eyebrow {
      font-size: 32px;
      letter-spacing: -0.64px;
    }

    .promo-banner__main-text {
      font-size: 42px;
      letter-spacing: -0.42px;
    }

    .promo-banner__secondary-heading {
      font-size: 42px;
      letter-spacing: -0.42px;
      margin-top: -20px;
    }

    .promo-banner__accent {
      font-size: 64px;
      letter-spacing: -2.56px;
    }

    .promo-banner__description {
      font-size: 18px;
    }

    .promo-banner__content {
      gap: 16px;
    }
  }

  @media screen and (max-width: 749px) {
    .promo-banner {
      padding: 24px 20px;
      min-height: max(150px, calc(var(--promo-banner-height, 200px) * 0.65));
    }

    .promo-banner__eyebrow {
      font-size: 24px;
      letter-spacing: -0.48px;
    }

    .promo-banner__main-text {
      font-size: 32px;
      letter-spacing: -0.32px;
    }

    .promo-banner__secondary-heading {
      font-size: 32px;
      letter-spacing: -0.32px;
      margin-top: -18px;
    }

    .promo-banner__accent {
      font-size: 48px;
      letter-spacing: -1.92px;
    }

    .promo-banner__description {
      font-size: 16px;
    }

    .promo-banner__content {
      gap: 14px;
    }

    .promo-banner__cta {
      font-size: 13px;
      padding: 10px 32px;
      min-height: 44px;
    }
  }

  @media screen and (max-width: 400px) {
    .promo-banner {
      min-height: max(120px, calc(var(--promo-banner-height, 200px) * 0.5));
    }

    .promo-banner__eyebrow {
      font-size: 20px;
      letter-spacing: -0.4px;
    }

    .promo-banner__main-text {
      font-size: 28px;
      letter-spacing: -0.28px;
    }

    .promo-banner__secondary-heading {
      font-size: 28px;
      letter-spacing: -0.28px;
      margin-top: -16px;
    }

    .promo-banner__accent {
      font-size: 40px;
      letter-spacing: -1.6px;
    }

    .promo-banner__cta {
      width: 100%;
      max-width: 280px;
    }
  }
</style>

