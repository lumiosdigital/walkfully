<script>
  (function() {
    if (window.bgTransitionInitialized) return;
    window.bgTransitionInitialized = true;

    function hexToRgb(hex) {
      if (!hex) return null;
      hex = hex.replace('#', '');
      if (hex.length === 3) hex = hex.split('').map(c => c + c).join('');
      const num = parseInt(hex, 16);
      return { r: (num >> 16) & 255, g: (num >> 8) & 255, b: num & 255 };
    }

    function parseColor(color) {
      if (!color) return null;
      if (color.startsWith('#')) return hexToRgb(color);
      const match = color.match(/rgba?\((\d+),\s*(\d+),\s*(\d+)/);
      if (match) return { r: parseInt(match[1]), g: parseInt(match[2]), b: parseInt(match[3]) };
      return null;
    }

    function easeInOutCubic(t) {
      return t < 0.5 ? 4 * t * t * t : 1 - Math.pow(-2 * t + 2, 3) / 2;
    }

    function interpolateColor(start, end, progress) {
      const easedProgress = easeInOutCubic(progress);
      return {
        r: Math.round(start.r + (end.r - start.r) * easedProgress),
        g: Math.round(start.g + (end.g - start.g) * easedProgress),
        b: Math.round(start.b + (end.b - start.b) * easedProgress)
      };
    }

    function findNextSectionColor(el) {
      let next = el.closest('section, .shopify-section');
      if (next) next = next.nextElementSibling;

      while (next) {
        if (next.classList.contains('scroll-line-section')) {
          next = next.nextElementSibling;
          continue;
        }

        const inner = next.querySelector('.about-story, .program-promo, [data-bg-color]');
        if (inner) {
          const bgColor = inner.dataset.bgColor ||
                         getComputedStyle(inner).getPropertyValue('--about-story-bg').trim() ||
                         getComputedStyle(inner).getPropertyValue('--program-promo-bg').trim() ||
                         getComputedStyle(inner).backgroundColor;
          const parsed = parseColor(bgColor);
          if (parsed) return parsed;
        }

        const computedBg = getComputedStyle(next).backgroundColor;
        if (computedBg && computedBg !== 'rgba(0, 0, 0, 0)' && computedBg !== 'transparent') {
          const parsed = parseColor(computedBg);
          if (parsed) return parsed;
        }

        next = next.nextElementSibling;
      }
      return null;
    }

    function initBgTransition() {
      const sections = document.querySelectorAll('[data-bg-transition="true"]');

      sections.forEach(section => {
        if (section._bgTransitionInit) return;
        section._bgTransitionInit = true;

        const startColor = hexToRgb(section.dataset.bgColor);
        const endColor = findNextSectionColor(section);

        if (!startColor || !endColor) return;

        let rafId = null;

        function handleScroll() {
          const rect = section.getBoundingClientRect();
          const sectionHeight = rect.height;
          const scrolledPast = -rect.top;

          const transitionStart = sectionHeight * 0.4;
          const transitionEnd = sectionHeight * 0.95;
          const transitionRange = transitionEnd - transitionStart;

          let progress = 0;
          if (scrolledPast > transitionStart) {
            progress = (scrolledPast - transitionStart) / transitionRange;
          }
          progress = Math.max(0, Math.min(1, progress));

          const color = interpolateColor(startColor, endColor, progress);
          section.style.backgroundColor = `rgb(${color.r}, ${color.g}, ${color.b})`;
        }

        function onScroll() {
          if (rafId) cancelAnimationFrame(rafId);
          rafId = requestAnimationFrame(handleScroll);
        }

        window.addEventListener('scroll', onScroll, { passive: true });
        window.addEventListener('resize', onScroll, { passive: true });
        handleScroll();
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initBgTransition);
    } else {
      initBgTransition();
    }
  })();
</script>

