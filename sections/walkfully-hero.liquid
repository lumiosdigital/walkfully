{%- liquid
  assign image_overlay_opacity = section.settings.image_overlay_opacity | divided_by: 100.0

  # Media assignments with backward compatibility
  assign desktop_image = section.settings.desktop_image | default: section.settings.hero_image
  assign desktop_video = section.settings.desktop_video | default: section.settings.hero_video
  assign mobile_image = section.settings.mobile_image
  assign mobile_video = section.settings.mobile_video

  # Check if we have desktop or mobile media
  assign has_desktop_video = false
  if desktop_video != blank
    assign has_desktop_video = true
  endif

  assign has_mobile_video = false
  if mobile_video != blank
    assign has_mobile_video = true
  endif

  assign has_mobile_media = false
  if mobile_image != blank or mobile_video != blank
    assign has_mobile_media = true
  endif

  assign layout_style = section.settings.layout_style | default: 'homepage'
  assign is_page_hero = false
  assign is_stacked = false
  if layout_style == 'page_hero'
    assign is_page_hero = true
  elsif layout_style == 'stacked'
    assign is_stacked = true
  endif
  assign show_footer = section.settings.show_footer
  if is_page_hero or is_stacked
    assign show_footer = false
  endif
  assign show_centered_description = section.settings.show_centered_description
  assign show_cta_button = section.settings.show_cta_button
-%}
<div
  class="
    walkfully-hero
    walkfully-hero--{{ layout_style }}
    color-{{ section.settings.color_scheme }}
  "
  data-section-id="{{ section.id }}"
  style="
    --image-overlay-opacity: {{ image_overlay_opacity }};
  "
>
  <div class="walkfully-hero__media-wrapper">
    {%- comment -%} Desktop Media Container {%- endcomment -%}
    <div class="walkfully-hero__media walkfully-hero__media--desktop">
      {% if has_desktop_video %}
        <video
          class="walkfully-hero__video"
          aria-label="{{ section.settings.top_text | strip_html | escape }} - background video"
          autoplay
          muted
          loop
          playsinline
          preload="metadata"
          {% if desktop_image != blank %}
            poster="{{ desktop_image | image_url: width: 1920 }}"
          {% endif %}
        >
          {%- comment -%} Prioritize WebM for better compression, fallback to MP4 {%- endcomment -%}
          {% for source in desktop_video.sources %}
            {% if source.mime_type == 'video/webm' %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endif %}
          {% endfor %}
          {% for source in desktop_video.sources %}
            {% if source.mime_type == 'video/mp4' %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endif %}
          {% endfor %}
          {% for source in desktop_video.sources %}
            {% if source.mime_type != 'video/webm' and source.mime_type != 'video/mp4' %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endif %}
          {% endfor %}
        </video>
      {% elsif desktop_image != blank %}
        {% render 'image',
          image: desktop_image,
          sizes: '100vw',
          no_radius: true,
          wrapper_class: 'walkfully-hero__image'
        %}
      {% else %}
        <div class="image no-radius walkfully-hero__image" role="img" aria-label="Hero background placeholder">
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
    </div>

    {%- comment -%} Mobile Media Container {%- endcomment -%}
    <div class="walkfully-hero__media walkfully-hero__media--mobile">
      {% if has_mobile_video %}
        <video
          class="walkfully-hero__video"
          aria-label="{{ section.settings.top_text | strip_html | escape }} - background video"
          autoplay
          muted
          loop
          playsinline
          preload="metadata"
          {% if mobile_image != blank %}
            poster="{{ mobile_image | image_url: width: 1920 }}"
          {% elsif desktop_image != blank %}
            poster="{{ desktop_image | image_url: width: 1920 }}"
          {% endif %}
        >
          {% for source in mobile_video.sources %}
            {% if source.mime_type == 'video/webm' %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endif %}
          {% endfor %}
          {% for source in mobile_video.sources %}
            {% if source.mime_type == 'video/mp4' %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endif %}
          {% endfor %}
          {% for source in mobile_video.sources %}
            {% if source.mime_type != 'video/webm' and source.mime_type != 'video/mp4' %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endif %}
          {% endfor %}
        </video>
      {% elsif mobile_image != blank %}
        {% render 'image',
          image: mobile_image,
          sizes: '100vw',
          no_radius: true,
          wrapper_class: 'walkfully-hero__image'
        %}
      {% elsif has_desktop_video %}
        <video
          class="walkfully-hero__video"
          aria-label="{{ section.settings.top_text | strip_html | escape }} - background video"
          autoplay
          muted
          loop
          playsinline
          preload="metadata"
          {% if desktop_image != blank %}
            poster="{{ desktop_image | image_url: width: 1920 }}"
          {% endif %}
        >
          {% for source in desktop_video.sources %}
            {% if source.mime_type == 'video/webm' %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endif %}
          {% endfor %}
          {% for source in desktop_video.sources %}
            {% if source.mime_type == 'video/mp4' %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endif %}
          {% endfor %}
          {% for source in desktop_video.sources %}
            {% if source.mime_type != 'video/webm' and source.mime_type != 'video/mp4' %}
              <source src="{{ source.url }}" type="{{ source.mime_type }}">
            {% endif %}
          {% endfor %}
        </video>
      {% elsif desktop_image != blank %}
        {% render 'image',
          image: desktop_image,
          sizes: '100vw',
          no_radius: true,
          wrapper_class: 'walkfully-hero__image'
        %}
      {% else %}
        <div class="image no-radius walkfully-hero__image" role="img" aria-label="Hero background placeholder">
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
    </div>
  </div>

  <div class="walkfully-hero__overlay"></div>

  {% if is_page_hero %}
    {% if section.settings.show_breadcrumbs %}
      <div class="walkfully-hero__breadcrumbs">
        {% render 'breadcrumbs', color: 'light' %}
      </div>
    {% endif %}
    <div class="walkfully-hero__content walkfully-hero__content--page-hero">
      {% if section.settings.middle_text != blank %}
        <div class="walkfully-hero__stylized-text walkfully-hero__stylized-text--top">
          {{ section.settings.middle_text }}
        </div>
      {% endif %}

      {% if section.settings.top_text != blank %}
        <h1 class="walkfully-hero__heading walkfully-hero__heading--page-hero">
          {{ section.settings.top_text }}
        </h1>
      {% endif %}

      {% if show_centered_description and section.settings.description_text != blank %}
        <p class="walkfully-hero__centered-description">
          {{ section.settings.description_text | newline_to_br }}
        </p>
      {% endif %}

      {% if show_cta_button and section.settings.cta_text != blank %}
        {% if section.settings.cta_link != blank %}
          <a
            href="{{ section.settings.cta_link }}"
            class="walkfully-hero__cta-button"
            style="--cta-button-color: {{ section.settings.cta_button_color | escape }};"
          >
            {{ section.settings.cta_text }}
          </a>
        {% else %}
          <span
            class="walkfully-hero__cta-button walkfully-hero__cta-button--disabled"
            style="--cta-button-color: {{ section.settings.cta_button_color | escape }};"
            aria-disabled="true"
          >
            {{ section.settings.cta_text }}
          </span>
        {% endif %}
      {% endif %}
    </div>
  {% elsif is_stacked %}
    <div class="walkfully-hero__content walkfully-hero__content--stacked">
      {% if section.settings.top_text != blank %}
        <h1 class="walkfully-hero__top-text">
          {{ section.settings.top_text }}
        </h1>
      {% endif %}

      {% if section.settings.middle_text != blank %}
        <div class="walkfully-hero__middle-text">
          {{ section.settings.middle_text }}
        </div>
      {% endif %}

      {% if section.settings.bottom_text != blank %}
        <h2 class="walkfully-hero__bottom-text">
          {{ section.settings.bottom_text | newline_to_br }}
        </h2>
      {% endif %}

      {% if show_centered_description and section.settings.description_text != blank %}
        <p class="walkfully-hero__stacked-description">
          {{ section.settings.description_text | newline_to_br }}
        </p>
      {% endif %}

      {% if show_cta_button and section.settings.cta_text != blank %}
        {% if section.settings.cta_link != blank %}
          <a
            href="{{ section.settings.cta_link }}"
            class="walkfully-hero__cta-button walkfully-hero__cta-button--stacked"
            style="--cta-button-color: {{ section.settings.cta_button_color | escape }};"
          >
            {{ section.settings.cta_text }}
          </a>
        {% else %}
          <span
            class="walkfully-hero__cta-button walkfully-hero__cta-button--stacked walkfully-hero__cta-button--disabled"
            style="--cta-button-color: {{ section.settings.cta_button_color | escape }};"
            aria-disabled="true"
          >
            {{ section.settings.cta_text }}
          </span>
        {% endif %}
      {% endif %}
    </div>
  {% else %}
    <div class="walkfully-hero__content">
      {% if section.settings.top_text != blank %}
        <h1 class="walkfully-hero__top-text">
          {{ section.settings.top_text }}
        </h1>
      {% endif %}

      {% if section.settings.middle_text != blank %}
        <div class="walkfully-hero__middle-text">
          {{ section.settings.middle_text }}
        </div>
      {% endif %}

      {% if section.settings.bottom_text != blank %}
        <h2 class="walkfully-hero__bottom-text">
          {{ section.settings.bottom_text | newline_to_br }}
        </h2>
      {% endif %}
    </div>
  {% endif %}

  {% if show_footer %}
    <div class="walkfully-hero__footer">
      <div class="walkfully-hero__footer-left">
        {% if section.settings.description_text != blank %}
          <p class="walkfully-hero__description">
            {{ section.settings.description_text | newline_to_br }}
          </p>
        {% endif %}
      </div>

      <div class="walkfully-hero__footer-right">
        {% if section.settings.cta_text != blank %}
          {% if section.settings.cta_link != blank %}
            <a
              href="{{ section.settings.cta_link }}"
              class="walkfully-hero__cta"
            >
              {{ section.settings.cta_text }}
            </a>
          {% else %}
            <span class="walkfully-hero__cta walkfully-hero__cta--disabled" aria-disabled="true">
              {{ section.settings.cta_text }}
            </span>
          {% endif %}
        {% endif %}
      </div>
    </div>

    <div class="walkfully-hero__border-bottom"></div>
  {% endif %}
</div>

{% if has_desktop_video or has_mobile_video %}
<script>
  (function() {
    const videos = document.querySelectorAll('[data-section-id="{{ section.id }}"] .walkfully-hero__video');
    if (!videos.length) return;

    videos.forEach(function(video) {
      // Show video once it can play
      function onVideoReady() {
        video.classList.add('is-loaded');
      }

      // Check if video is already ready
      if (video.readyState >= 3) {
        onVideoReady();
      } else {
        video.addEventListener('canplay', onVideoReady, { once: true });
      }

      // Fallback: show video after timeout even if not fully loaded
      setTimeout(function() {
        if (!video.classList.contains('is-loaded')) {
          video.classList.add('is-loaded');
        }
      }, 3000);

      // Try to play video (handles autoplay restrictions)
      video.play().catch(function() {
        // Autoplay blocked, video will still show with poster
        video.classList.add('is-loaded');
      });
    });
  })();
</script>
{% endif %}

