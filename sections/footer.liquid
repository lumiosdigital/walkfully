{%- liquid
  assign has_social_icons = false
  if settings.social_facebook_link != blank or settings.social_instagram_link != blank
    assign has_social_icons = true
  endif
-%}

<footer
  class="walkfully-footer"
  style="
    --footer-bg: {{ section.settings.background_color }};
    --footer-bg-bottom: {{ section.settings.background_color_bottom }};
    --footer-text: {{ section.settings.text_color }};
    --footer-heading: {{ section.settings.heading_color }};
    --footer-line: {{ section.settings.line_color }};
    --footer-button-bg: {{ section.settings.button_background }};
    --footer-button-text: {{ section.settings.button_text_color }};
    --footer-input-border: {{ section.settings.input_border_color }};
  "
>
  <div class="walkfully-footer__inner">
    {% if section.settings.footer_icon != blank %}
      <div class="walkfully-footer__logo">
        <span class="walkfully-footer__logo-line"></span>
        {% render 'image', image: section.settings.footer_icon, sizes: '72px', no_radius: true %}
        <span class="walkfully-footer__logo-line"></span>
      </div>
    {% endif %}

    <div class="walkfully-footer__content">
      <div class="walkfully-footer__menus">
        {%- for block in section.blocks -%}
          {% if block.type == 'menu' %}
            <div class="walkfully-footer__menu-column" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="walkfully-footer__heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.menu != blank -%}
                <ul class="walkfully-footer__menu-list">
                  {% for link in block.settings.menu.links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {% endfor %}
                </ul>
              {%- endif -%}
            </div>
          {% endif %}
        {%- endfor -%}
      </div>

      <div class="walkfully-footer__right">
        {%- for block in section.blocks -%}
          {% if block.type == 'newsletter' %}
            <div class="walkfully-footer__newsletter" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="walkfully-footer__heading">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <p class="walkfully-footer__newsletter-text">{{ block.settings.text }}</p>
              {%- endif -%}
              {%- form 'customer', id: 'FooterNewsletter', class: 'walkfully-footer__form' -%}
                <input type="hidden" name="contact[tags]" value="newsletter">
                {%- if form.posted_successfully? -%}
                  <p class="walkfully-footer__success">Thanks for subscribing!</p>
                {% else %}
                  <div class="walkfully-footer__form-row">
                    <input
                      type="email"
                      name="contact[email]"
                      class="walkfully-footer__input"
                      placeholder="Enter your email"
                      required
                    >
                    <button type="submit" class="walkfully-footer__button">Subscribe</button>
                  </div>
                {%- endif -%}
              {%- endform -%}
            </div>
          {% endif %}
        {%- endfor -%}

        {% if has_social_icons and section.settings.show_social_icons %}
          <div class="walkfully-footer__social">
            {% if settings.social_facebook_link != blank %}
              <a href="{{ settings.social_facebook_link }}" class="walkfully-footer__social-link" target="_blank" rel="noopener">
