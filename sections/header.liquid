{%- liquid
  assign logo_alignment = section.settings.logo_alignment
  assign logo_alignment_mobile = section.settings.logo_alignment_mobile
  assign nav_position = section.settings.nav_position
  assign navigation_display = section.settings.navigation_display

  assign nav_is_below = false
  if nav_position == 'below' or nav_position == 'below-centered'
    assign nav_is_below = true
  endif

  assign transparent_templates = section.settings.transparent_templates | newline_to_br | strip_newlines | split: '<br />'
  assign header_is_transparent = false

  if section.settings.transparent_on_home and template.name == 'index'
    assign header_is_transparent = true
  endif

  unless header_is_transparent
    for item in transparent_templates
      if item contains '.'
        assign name = item | split: '.' | first
        assign suffix = item | split: '.' | last

        if name == template.name and suffix == template.suffix
          assign header_is_transparent = true
          break
        endif
      else
        if item == template.name
          assign header_is_transparent = true
          break
        endif
      endif
    endfor
  endunless

  assign mega_menu_positions = ''
  for block in section.blocks
    assign mega_menu_positions = mega_menu_positions | append: ' ' | append: block.settings.position
  endfor
  assign mega_menu_positions = mega_menu_positions | split: ' ' | uniq
-%}

{% if section.settings.display_mode != 'static' %}
  <script>
    var docModifier = 'header-is-' + '{{ section.settings.display_mode }}';

    document.documentElement.classList.add(docModifier);
    document.documentElement.classList.add('header-is-stuck');
    {% if header_is_transparent %}
      document.documentElement.classList.add('header-is-transparent');
    {% endif %}
  </script>
{% endif %}

{%- capture logo_wrapping_tag -%}
  {%- if template.name == 'index' %}h1{% else %}div{% endif -%}
{%- endcapture -%}

{% capture logo %}
  <{{ logo_wrapping_tag }} class="header__heading ff-h fs-1">
    <a href="{{ routes.root_url }}" class="fs-1 ff-h">
      {%- if settings.logo != blank -%}
        <div class="header__heading-logo-wrapper" style="
            --max-width: {{ settings.logo_width }}px;
            --max-width-mobile: {{ settings.logo_width_mobile }}px;
          "
        >
          {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
          {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
          {% capture sizes %}(min-width: 750px) {{ settings.logo_width }}px, 50vw{% endcapture %}
          {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
          {{
            settings.logo
            | image_url: width: 600
            | image_tag:
              class: 'header__heading-logo header__heading-logo--standard',
              widths: widths,
              height: logo_height,
              width: settings.logo_width,
              alt: logo_alt,
              sizes: sizes,
              preload: true
          }}

          {% if settings.transparent_logo != blank and header_is_transparent %}
            {%- assign transparent_logo_alt = settings.transparent_logo.alt | default: shop.name | escape -%}
            {%- assign transparent_logo_height = settings.logo_width | divided_by: settings.transparent_logo.aspect_ratio -%}
            {% capture transparent_sizes %}(min-width: 750px) {{ settings.logo_width }}px, 50vw{% endcapture %}
            {% capture transparent_widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
            {{
              settings.transparent_logo
              | image_url: width: 600
              | image_tag:
                class: 'header__heading-logo header__heading-logo--transparent',
                widths: transparent_widths,
                height: transparent_logo_height,
                width: settings.logo_width,
                alt: transparent_logo_alt,
                sizes: transparent_sizes,
                preload: true
            }}
          {% endif %}
        </div>
      {%- else -%}
        <span>{{ shop.name }}</span>
      {%- endif -%}
    </a>
  </{{ logo_wrapping_tag }}>
{% endcapture %}

{% capture account_button %}
  {%- if shop.customer_accounts_enabled -%}
    <div class="btn-icon header__account-button">
      <a
        href="{{ routes.account_url }}"
        aria-label="{{ 'accessibility.go_account' | t }}"
      >
        {% render 'theme-icon', icon: 'user', size: '1.4em' %}
      </a>
    </div>
  {%- endif -%}
{% endcapture %}

{% capture navigation %}
  <nav class="header__menu">
    {% render 'nav-menu',
      links: section.settings.menu.links,
      id: 'header',
      mega_menu_positions: mega_menu_positions,
      submenu_icon: section.settings.submenu_icon,
      nav_text_size: section.settings.nav_text_size,
      nav_trigger: section.settings.nav_trigger,
    %}
  </nav>
{% endcapture %}

<section-header
  class="
    header
    header--menu-type-{{ navigation_display }}
    header--desktop-logo-align-{{ logo_alignment}}
    header--desktop-nav-position-{{ nav_position }}
    header--mobile-logo-align-{{ logo_alignment_mobile}}
    {% if section.settings.show_border %}
      header--show-border
    {% endif %}
    header--border-color-{{ section.settings.border_color }}
    color-{{ settings.header_color_scheme }}
    {% if header_is_transparent %}
      header--transparent
      header--is-transparent
    {% endif %}
  "
  style="
    --border-weight: {{ section.settings.border_weight }}px;
    --border-opacity: {{ section.settings.border_opacity | divided_by: 100.0 }};
    --color-transparent-foreground: {{ settings.color_schemes[settings.header_transparent_color_scheme.id].settings.text.red }}, {{ settings.color_schemes[settings.header_transparent_color_scheme.id].settings.text.green }},{{ settings.color_schemes[settings.header_transparent_color_scheme.id].settings.text.blue }};
    --color-transparent-background: {{ settings.color_schemes[settings.header_transparent_color_scheme.id].settings.background.red }}, {{ settings.color_schemes[settings.header_transparent_color_scheme.id].settings.background.green }},{{ settings.color_schemes[settings.header_transparent_color_scheme.id].settings.background.blue }};
  "
  data-display-mode="{{ section.settings.display_mode }}"
>
  <div class="header__inner">
    <div class="header__content">
      <div class="header__content-left">
        {% if logo_alignment == 'left' or logo_alignment_mobile == 'left' %}
          {{ logo }}
        {% endif %}

        {% if section.settings.menu != blank
          and nav_position == 'inline'
          and logo_alignment == 'center'
          and navigation_display != 'drawer'
        %}
          {{ navigation }}
        {% endif %}

        {% if section.settings.menu != blank %}
          <button
            type="button"
            class="header__drawer-menu btn-icon"
            data-open-overlay
            data-sub-id="drawerMenu"
            aria-label="{{ 'accessibility.open_drawer_menu' | t }}"
          >
            {% render 'theme-icon', icon: 'menu', size: '1.4em', stroke_override: '2' %}
          </button>
        {% endif %}

        {% if settings.enable_quick_search %}
          {% render 'quick-search', id: 'header-left' %}
        {%- else -%}
          <div class="btn-icon header-search__button">
            <a
              href="{{ routes.search_url }}"
              aria-label="{{ 'accessibility.go_search' | t }}"
            >
              {% render 'theme-icon', icon: 'search', size: '1.4em' %}
            </a>
          </div>
        {% endif %}

        {% if nav_is_below and logo_alignment == 'center' and navigation_display != 'drawer' %}
          {{ account_button }}
        {% endif %}
      </div>

      <div class="header__content-center">
        {% if logo_alignment == 'center' or logo_alignment_mobile == 'center' %}
          {{ logo }}
        {% endif %}

        {% if section.settings.menu != blank
          and nav_position == 'inline'
          and logo_alignment == 'left'
          and navigation_display != 'drawer'
        %}
          {{ navigation }}
        {% endif %}
      </div>

      <div class="header__content-right">
        {% if section.settings.enable_country_selector or section.settings.enable_language_selector %}
          {% render 'localization-panel-button',
            id: 'header',
            show_as_one: true,
            enable_country_selector: section.settings.enable_country_selector,
            enable_language_selector: section.settings.enable_language_selector
          %}
        {% endif %}

        {% if section.settings.show_subscribe_button %}
          <div class="header__subscribe-button">
            <a
              href="{{ section.settings.subscribe_button_link }}"
              class="btn-subscribe"
              {% if section.settings.subscribe_button_link == blank %}onclick="return false;"{% endif %}
            >
              {{ section.settings.subscribe_button_text }}
            </a>
          </div>
        {% endif %}

        {% if settings.enable_quick_search %}
          {% render 'quick-search', id: 'header' %}
        {%- else -%}
          <div class="btn-icon header-search__button">
            <a
              href="{{ routes.search_url }}"
              aria-label="{{ 'accessibility.go_search' | t }}"
            >
              {% render 'theme-icon', icon: 'search', size: '1.4em' %}
            </a>
          </div>
        {% endif %}

        <a
          href="{{ routes.account_url }}"
          class="btn-icon"
          aria-label="{{ 'accessibility.account' | t }}"
        >
          {% render 'theme-icon', icon: 'user', size: '1.4em' %}
        </a>

        <a
          href="{{ routes.cart_url }}"
          class="btn-icon"
          data-open-overlay
          data-sub-id="quickCart"
          aria-label="{{ 'accessibility.open_quick_cart' | t }}"
        >
          {% assign icon_key = 'shopping-' | append: section.settings.cart_icon %}
          {% render 'theme-icon', icon: icon_key, size: '1.4em' %}
          <div
            data-cart-counter
            class="header__icon-button-counter header__icon-button-counter--shopping-{{ section.settings.cart_icon }}{% if cart.item_count > 0 %} active{% endif %}"
          >
            <span class="visually-hidden">{{ 'accessibility.quick_cart' | t }}</span>
            <span data-cart-count>
              {%- if cart.item_count > 0 %}{{ cart.item_count }}{% endif -%}
            </span>
          </div>
        </a>
      </div>
    </div>
    {% if section.settings.menu != blank and nav_is_below and navigation_display != 'drawer' %}
      <div class="header__footer color-{{ settings.header_nav_below_color_scheme }}{% if nav_position == 'below-centered' %} header__footer--nav-center{% endif %}">
        {{ navigation }}
      </div>
    {% endif %}
  </div>
</section-header>

{% render 'drawer-menu', mega_menu_positions: mega_menu_positions %}

<script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "Organization",
    "name": {{ shop.name | json }},
    {% if settings.logo %}
      "logo": {{ settings.logo | image_url: width: 500 | prepend: "https:" | json }},
    {% endif %}
    "sameAs": [
      {{ settings.social_twitter_link | json }},
      {{ settings.social_facebook_link | json }},
      {{ settings.social_pinterest_link | json }},
      {{ settings.social_instagram_link | json }},
      {{ settings.social_tiktok_link | json }},
      {{ settings.social_tumblr_link | json }},
      {{ settings.social_snapchat_link | json }},
      {{ settings.social_youtube_link | json }},
      {{ settings.social_vimeo_link | json }}
    ],
    "url": {{ request.origin | append: page.url | json }}
  }
</script>

{%- if request.page_type == 'index' -%}
  {% assign potential_action_target = request.origin | append: routes.search_url | append: '?q={search_term_string}' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": {{ shop.name | json }},
      "potentialAction": {
        "@type": "SearchAction",
        "target": {{ potential_action_target | json }},
        "query-input": "required name=search_term_string"
      },
      "url": {{ request.origin | append: page.url | json }}
    }
  </script>
{%- endif -%}

<style>
  /* Header - Remove margin */
  .header {
    margin-left: 0;
    margin-right: 0;
    transition: opacity 0.2s ease, transform 0.3s ease, background-color 0.3s ease, border-color 0.3s ease !important;
  }

  /* Force header to stay transparent only when over hero section (requires both classes) */
  .header.header--transparent.header--is-transparent:not(:hover):not(:focus-within) {
    background-color: rgba(0,0,0,0) !important;
  }

  .header.header--transparent.header--is-transparent:not(:hover):not(:focus-within) .header__menu .fancy-link a,
  .header.header--transparent.header--is-transparent:not(:hover):not(:focus-within) .nav-menu a {
    color: var(--Cement, #F7F1E5) !important;
  }

  /* Keep icons white when transparent */
  .header.header--transparent.header--is-transparent:not(:hover):not(:focus-within) .btn-icon {
    color: #F7F1E5 !important;
  }

  /* Keep subscribe button white when transparent */
  .header.header--transparent.header--is-transparent:not(:hover):not(:focus-within) .btn-subscribe {
    color: #f7f1e5 !important;
    border-color: #f7f1e5 !important;
  }

  .header a:not(.btn-icon),
  .header__inner,
  .header__menu,
  .nav-menu {
    transition: color 0.3s ease, background-color 0.3s ease, border-color 0.3s ease;
  }

  /* Header Padding */
  .header__inner {
    padding-left: 40px;
    padding-right: 40px;
  }

  /* Hide hamburger menu on desktop when using dropdown navigation */
  @media screen and (min-width: 991px) {
    .header--menu-type-dropdown .header__drawer-menu {
      display: none;
    }
  }

  @media screen and (max-width: 990px) {
    .header__inner {
      padding-left: 20px;
      padding-right: 20px;
    }

    /* Mobile header layout: Logo (left) | Cart + Hamburger (right) */
    .header__content-left {
      justify-content: flex-start;
    }

    .header__content-right {
      display: flex;
      gap: 15px;
      align-items: center;
    }

    /* Hide search and account icons on mobile - keep only hamburger, logo, and cart */
    .header__content-left .header-search__button,
    .header__content-right .header-search__button,
    .header__content-right .btn-icon[href*="account"],
    .header__account-button {
      display: none !important;
    }

    /* Move hamburger to right side on mobile */
    .header__drawer-menu {
      order: 2;
    }
  }

  /* Header Navigation Links - Custom Styling */
  .header__menu .fancy-link a,
  .nav-menu a {
    color: var(--Cement, #F7F1E5);
    font-family: "Work Sans";
    font-size: 13px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    text-transform: uppercase;
  }

  /* When header is colored (not transparent or when hovered), navigation should be dark */
  .header:not(.header--is-transparent) .header__menu .fancy-link a,
  .header:not(.header--is-transparent) .nav-menu a,
  .header.header--transparent:hover .header__menu .fancy-link a,
  .header.header--transparent:hover .nav-menu a,
  .header.header--transparent:focus-within .header__menu .fancy-link a,
  .header.header--transparent:focus-within .nav-menu a {
    color: var(--Deep-Night, #21262F);
  }

  /* Header Icons - Alignment */
  .btn-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .btn-icon svg {
    display: block;
  }

  /* Header Subscribe Button Styles */
  .header__subscribe-button {
    display: none;
  }

  @media screen and (min-width: 990px) {
    .header__subscribe-button {
      display: block;
      margin-right: 20px;
    }
  }

  .btn-subscribe {
    display: inline-flex;
    justify-content: center;
    padding: 10px 20px;
    height: 40px;
    border: 1px solid #d14626;
    border-radius: 3px;
    font-family: 'Work Sans', Arial, sans-serif;
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    color: #d14626;
    background: transparent;
    text-decoration: none;
    white-space: nowrap;
  }

  .btn-subscribe:hover {
    background: #d14626;
    color: #f7f1e5;
    border-color: #d14626;
  }

  /* Transparent header state - white button (only when not hovered/focused) */
  .header.header--transparent.header--is-transparent:not(:hover):not(:focus-within) .btn-subscribe {
    color: #f7f1e5;
    border-color: #f7f1e5;
    background: transparent;
  }

  .header.header--transparent.header--is-transparent:not(:hover):not(:focus-within) .btn-subscribe:hover {
    background: #f7f1e5;
    color: #252b36;
    border-color: #f7f1e5;
  }

  /* Drawer menu text uppercase */
  .drawer-menu__menu a,
  .drawer-menu__menu button {
    text-transform: uppercase;
  }

  /* Mobile logo alignment */
  @media screen and (max-width: 990px) {
    /* When mobile logo is left-aligned, hide center logo and show left */
    .header--mobile-logo-align-left .header__content-center .header__heading {
      display: none;
    }
    .header--mobile-logo-align-left .header__content-left .header__heading {
      display: block;
    }

    /* When mobile logo is center-aligned, hide left logo and show center */
    .header--mobile-logo-align-center .header__content-left .header__heading {
      display: none;
    }
    .header--mobile-logo-align-center .header__content-center .header__heading {
      display: block;
    }
  }

  /* Desktop logo alignment (override mobile rules) */
  @media screen and (min-width: 991px) {
    /* When desktop logo is left-aligned, hide center logo and show left */
    .header--desktop-logo-align-left .header__content-center .header__heading {
      display: none;
    }
    .header--desktop-logo-align-left .header__content-left .header__heading {
      display: block;
    }

    /* When desktop logo is center-aligned, hide left logo and show center */
    .header--desktop-logo-align-center .header__content-left .header__heading {
      display: none;
    }
    .header--desktop-logo-align-center .header__content-center .header__heading {
      display: block;
    }
  }
</style>

